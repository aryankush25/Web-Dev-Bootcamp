<% include ../partials/header.ejs %>

<div class="container">
    <div>
        
        <h1 style="text-align: center; width: 100%;"> Add New Comment to <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 25px auto;">
        
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="Text">
                    
                    <input type="text" class="form-control" name="comment[author]" placeholder="Author">
                    
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    
    </div>
</div>

