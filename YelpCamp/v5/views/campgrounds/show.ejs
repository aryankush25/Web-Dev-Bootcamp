<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campgrounds.image %>">
                <div class="caption-full">
                    <h4><a><%= campgrounds.name %></a></h4>
                    <h4 class="float-right">$9.00/night</h4>
                    <p><%= campgrounds.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="float-right">
                    <a class=" btn btn-success" href="/campgrounds/<%=campgrounds._id%>/comments/new">Add New Comments</a>
                </div>
                <hr>
                <% campgrounds.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <spam class="float-right">10 days ago</spam>
                            <p> 
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>